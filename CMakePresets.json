{
    "$schema": "https://cmake.org/cmake/help/latest/_downloads/3e2d73bff478d88a7de0de736ba5e361/schema.json",
    "version": 8,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 24,
        "patch": 0
    },
    "configurePresets": [
        {
            "name": "Base-Configure",
            "hidden": true,
            "generator": "Ninja Multi-Config",
            "toolchainFile": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake",
            "binaryDir": "${sourceDir}/out/build/${presetName}",
            "installDir": "${sourceDir}/out/install/${presetName}"
        },
        {
            "name": "x64-window-msvc",
            "inherits": "Base-Configure",
            "architecture": {
                "value": "x64",
                "strategy": "external"
            },
            "toolset": {
                "value": "host=x64",
                "strategy": "external"
            },
            "cacheVariables": {
                "CMAKE_CXX_COMPILER": "cl.exe",
                "CMAKE_PREFIX_PATH": "C:/Qt/6.9.0/msvc2022_64/;${sourceDir}/CMake;"
            },
            "vendor": {
                "microsoft.com/VisualStudioSettings/CMake/1.0": {
                    "hostOS": [
                        "Windows"
                    ],
                    "intelliSenseMode": "windows-msvc-x64",
                    "disableExternalAnalysis": false,
                    "enableMicrosoftCodeAnalysis": true,
                    "codeAnalysisRuleset": "AllRules"
                }
            }
        },
        {
            "name": "x64-window-clang",
            "inherits": "Base-Configure",
            "architecture": {
                "value": "x64",
                "strategy": "external"
            },
            "toolset": {
                "value": "clang-cl",
                "strategy": "external"
            },
            "cacheVariables": {
                "CMAKE_CXX_COMPILER": "clang++.exe",
                "CMAKE_PREFIX_PATH": "C:/Qt/6.9.0/msvc2022_64/;${sourceDir}/CMake;"
            },
            "vendor": {
                "microsoft.com/VisualStudioSettings/CMake/1.0": {
                    "hostOS": [
                        "Windows"
                    ],
                    "intelliSenseMode": "windows-clang-x64",
                    "disableExternalAnalysis": false,
                    "enableMicrosoftCodeAnalysis": true,
                    "codeAnalysisRuleset": "AllRules"
                }
            }
        }
    ],
    "buildPresets": [
        {
            "name": "base-build",
            "hidden": true,
            "verbose": true,
            "jobs": 8,
            "environment": {
                "GTEST_COLOR": "yes"
            }
        },
        {
            "name": "x64-window-msvc-debug",
            "configurePreset": "x64-window-msvc",
            "inherits": "base-build",
            "configuration": "Debug"
        },
        {
            "name": "x64-window-msvc-release",
            "configurePreset": "x64-window-msvc",
            "inherits": "base-build",
            "configuration": "Release"
        },
        {
            "name": "x64-window-clang-debug",
            "configurePreset": "x64-window-clang",
            "inherits": "base-build",
            "configuration": "Debug"
        },
        {
            "name": "x64-window-clang-release",
            "configurePreset": "x64-window-clang",
            "inherits": "base-build",
            "configuration": "Release"
        }
    ],
    "testPresets": [
        {
            "name": "base-test",
            "hidden": true,
            "output": {
                "outputOnFailure": true,
                "verbosity": "verbose"
            },
            "filter": {
                "exclude": {
                    "name": "RendererTests"
                }
            }
        },
        {
            "name": "x64-window-msvc-debug-test",
            "inherits": "base-test",
            "configurePreset": "x64-window-msvc",
            "configuration": "Debug"
        },
        {
            "name": "x64-window-msvc-release-test",
            "inherits": "base-test",
            "configurePreset": "x64-window-msvc",
            "configuration": "Release"
        },
        {
            "name": "x64-window-clang-debug-test",
            "inherits": "base-test",
            "configurePreset": "x64-window-clang",
            "configuration": "Debug"
        },
        {
            "name": "x64-window-clang-release-test",
            "inherits": "base-test",
            "configurePreset": "x64-window-clang",
            "configuration": "Release"
        }
    ],
    "workflowPresets": [
        {
            "name": "x64-window-msvc-release",
            "steps": [
                {
                    "type": "configure",
                    "name": "x64-window-msvc"
                },
                {
                    "type": "build",
                    "name": "x64-window-msvc-release"
                },
                {
                    "type": "test",
                    "name": "x64-window-msvc-release-test"
                }
            ]
        },
        {
            "name": "x64-window-clang-release",
            "steps": [
                {
                    "type": "configure",
                    "name": "x64-window-clang"
                },
                {
                    "type": "build",
                    "name": "x64-window-clang-release"
                },
                {
                    "type": "test",
                    "name": "x64-window-clang-release-test"
                }
            ]
        }
    ]
}